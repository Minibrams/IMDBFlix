{
    "manifest_version" : 2,
    
    "name" : "IMDBFlix",
    "description" : "Automatically gathers IMDB rating when hovering over movies on Netflix.",
    "version" : "1.0",
    
    "page_action" : {
        "default_icon" : {
            "32" : "images/imdbflix_32.jpg"
        }
    },
    "content_scripts" : [
        {
            "matches" : ["*://www.netflix.com/*"],
            "js" : ["APIKEY.js", 
                    "thirdparty/jquery.js", 
                    "background.js"]
        }
    ],

    "permissions" : [
        "*://www.omdbapi.com/*",
        "*://www.netflix.com/*"
    ]
}

